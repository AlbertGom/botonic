{
  // start of path dependent configuration
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ],
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      "*": [
        "../src/*",
        "../lib/src/*",
        "../types/*"
      ]
    },
//    "rootDir": "../src",
    // end of path dependent configuration
    "outDir": "lib",
    "declaration": true,
    "declarationDir": "lib",
    "sourceMap": true,
    "target": "es2015",
    "module": "commonjs",
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    // lint options
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    // test options
    "types": [
      "@types/jest"
    ]
  }
}

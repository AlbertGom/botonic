{
  "compilerOptions": {
    "sourceMap": true,
    "target": "es2015",
    "module": "commonjs",
    "baseUrl": "src",
    "paths": {
      "*": [
        "src/*",
        "lib/src/*"
      ]
    },
    "rootDir": "src",
    "outDir": "lib",
    "jsx": "react",
//    "allowJs": true,
    "declaration": true,
    "declarationDir": "lib",
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "lib"
  ]
}

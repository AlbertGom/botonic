{
  "compilerOptions": {
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "es2015",
    "module": "commonjs",
    "baseUrl": "src",
    "paths": {
      "*": ["src/*", "lib/*", "types/*"]
    },
    "outDir": "lib",
    "jsx": "react",
    "allowJs": true,
    "lib": ["dom", "es2017"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "lib"]
}
